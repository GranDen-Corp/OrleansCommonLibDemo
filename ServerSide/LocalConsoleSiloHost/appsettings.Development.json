{
  "ApplicationInsights": {
    "InstrumentationKey": ""
  },
  "Orleans": {
    "SiloConfig": {
      "ClusterId": "demo-host-server",
      "ServiceId": "demo-service",
      "AdvertisedIp": "*",
      "ListenOnAnyHostAddress": true,
      "SiloPort": 8320,
      "GatewayPort": 8310
    },
    "Provider": {
      "DefaultProvider": "MongoDB",
      "MongoDB": {
        "Cluster": {
          "DbConn": "mongodb://localhost:27017",
          "DbName": "demo-silo-Clustering"
        },
        "Storage": {
          "DbConn": "mongodb://localhost:27017",
          "DbName": "demo-silo-Storage"
        },
        "Reminder": {
          "DbConn": "mongodb://localhost:27017",
          "DbName": "demo-silo-Reminder"
        }
      }
    },
    "Dashboard": {
      "enable": true,
      "port": 8210
    },
    "GrainOption": {
      "LoadPaths": [
        "{GrainLoadPath}/HelloWorld.Grain/bin/Debug/netcoreapp3.1/HelloWorld.Grain.dll",
        "{GrainLoadPath}/MyReminder.Grain/bin/Debug/netcoreapp3.1/MyReminder.Grain.dll",
//        "{GrainLoadPath}/NumberGenerator.Grain/bin/Debug/netcoreapp3.1/NumberGenerator.Grain.dll",
        "{GrainLoadPath}/ComplexTypeDemo.Grain/bin/Debug/netcoreapp3.1/ComplexTypeDemo.Grain.dll"
      ],
      "ExcludedTypeFullNames": []
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Orleans.RuntimeSiloLogStatistics": "Warning",
        "Orleans.Runtime.Management.ManagementGrain": "Warning",
        "Orleans.Runtime.MembershipService.MembershipTableManager": "Warning",
        "Orleans.Runtime.SiloControl": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "Trace"
      },
      {
        "Name": "Debug"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithProcessName",
      "WithEnvironmentUserName",
      "WithThreadId",
      "WithExceptionDetails"
    ]
  }
}
