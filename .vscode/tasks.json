{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "dependsOn": [
                "build demo server",
                "build cmd client"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build demo grains",
            "dependsOn":[
                "build HelloWorld grain",
                "build MyReminder grain"
            ],
            "group": "build"
        },
        {
            "label": "build HelloWorld grain",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ServerSide/HelloWorld.Grain/HelloWorld.Grain.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "build MyReminder grain",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ServerSide/MyReminder.Grain/MyReminder.Grain.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "build demo server",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ServerSide/LocalConsoleSiloHost/LocalConsoleSiloHost.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build",
            "dependsOn":[
                "build demo grains"
            ]
        },
        {
            "label": "build cmd client",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ClientSide/ConsoleClientDemo/ConsoleClientDemo.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        }
    ]
}